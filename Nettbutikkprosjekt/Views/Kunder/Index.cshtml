@model Model.Kunde
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logg inn</title>
</head>
<body>
    <script src="~/Scripts/jquery-1.8.2.minjs"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)


        <fieldset>
            <legend>Logg inn</legend>

            <div class="editor-label">
                @Html.LabelFor(model => model.epost)
            </div>
            <div class="editor-field">
                @Html.EditorFor(model => model.epost)
                @Html.ValidationMessageFor(model => model.epost)
            </div>
            <div class="editor-label">
                @Html.LabelFor(model => model.passord)
            </div>
            <div class="editor-field">
                @Html.PasswordFor(model => model.passord)
                @Html.ValidationMessageFor(model => model.passord)
                
            </div>
            <p>
                <input type="submit" value="Logg inn" />
            </p>
            @if (ViewBag.Innlogget)
            {
                <p style="color:blue">Logget inn</p>
                <a>@Session["Bruker"]</a>
                
                //Session["Bruker"] = Model.epost;
            }
            else
            {
                <p style="color:red">Ikke logget inn</p>
                <a>@Session["Bruker"]</a>
            }
        </fieldset>
    }
    <h2>@Html.ActionLink("Logg inn administrator", "adminlogg", "Kunder", new { @class = "menu-item float-right" })</h2>
    
</body>
</html>
